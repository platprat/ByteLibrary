<FindBugsFilter>
     <!-- All bugs in test classes, except for JUnit-specific bugs -->
     <Match>
      <Class name="~.*\.*Test.*" />
     </Match>

     <Match>
      <Package name="~.*\.old" />
     </Match>

     <Match>
      <Package name="~test.*" />
     </Match>

     <Match>
      <Package name="~.*test.*" />
     </Match>

     <Match>
      <Package name="~beta.*" />
     </Match>

</FindBugsFilter>
